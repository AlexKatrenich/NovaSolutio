<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/textPrimaryColor</item>
    </style>

    <style name="BoldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProductListItemTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ColumnsCaptionTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#565759</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/textPrimaryColor</item>
        <item name="android:layout_marginTop">@dimen/layout_forms_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_forms_margin</item>
        <item name="android:layout_marginLeft">@dimen/divider_left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_left_right_margin</item>
    </style>

    <style name="SummaryLayoutsCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/layout_forms_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_corners_radius</item>
        <item name="android:padding">@dimen/card_view_content_padding</item>
    </style>

    <!--Стиль для відображення тексту в фрагменті проведення оплати-->
    <style name="PaymentBottomSheetTextViewCaptionStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_margin">@dimen/payment_views_layout_margins</item>
    </style>

    <style name="PaymentBottomSheetTextViewCaptionStyle.TextViewNormalText" parent="PaymentBottomSheetTextViewCaptionStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialButtonStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MaterialButtonStyle.BillButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
    </style>



</resources>
