<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProductListItemTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/listTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ColumnsCaptionTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#565759</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/listTextPrimaryColor</item>
        <item name="android:layout_marginTop">@dimen/layout_forms_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_forms_margin</item>
        <item name="android:layout_marginLeft">@dimen/divider_left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_left_right_margin</item>
    </style>

    <style name="SummaryLayoutsCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/layout_forms_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_corners_radius</item>
        <item name="android:padding">@dimen/card_view_content_padding</item>
    </style>

</resources>
