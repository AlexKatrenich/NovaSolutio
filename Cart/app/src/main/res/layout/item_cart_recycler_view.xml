<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_view_content_padding"
    android:layout_margin="@dimen/list_elements_margin_dimen">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/ib_delete_item_from_cart_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_item_from_list_cart"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ib_delete_item_from_cart_list"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_name_cart_list"
            style="@style/ProductListItemTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/list_elements_margin_dimen"
            android:layout_marginRight="@dimen/list_elements_margin_dimen"
            tools:text="product name" />

        <TextView
            android:id="@+id/tv_item_count_cart_list"
            style="@style/ProductListItemTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_elements_margin_dimen"
            android:layout_marginRight="@dimen/list_elements_margin_dimen"
            android:layout_weight="3"
            android:textAlignment="center"
            tools:text="2" />

        <TextView
            android:id="@+id/tv_item_price_cart_list"
            style="@style/ProductListItemTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="textEnd"
            android:layout_marginLeft="@dimen/list_elements_margin_dimen"
            android:layout_marginRight="@dimen/list_elements_margin_dimen"
            tools:text="200.00 UAH" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>